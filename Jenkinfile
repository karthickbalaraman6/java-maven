pipeline {
  agent any

  tools {
    jdk 'JAVA_17'   // must match name in Manage Jenkins -> JDK installations
    maven 'maven'   // must match name in Manage Jenkins -> Maven installations
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/karthickbalaraman6/java-maven.git', credentialsId: 'github-creds'
      }
    }

    stage('Build WAR') {
      steps {
        sh 'mvn -B clean package'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t login-apps .'
      }
    }

    stage('Run Container') {
      steps {
        sh '''
          docker ps -q --filter name=login-apps | grep -q . && docker stop login-apps && docker rm login-apps || true
          docker run -d -p 8080:8081 --name login-apps login-apps
        '''
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'target/*.war', onlyIfSuccessful: false
    }
    success {
      echo 'Deployment succeeded — open http://<EC2-IP>:8080/loginapp/login.html'
    }
    failure {
      echo 'Pipeline failed — check console output'
    }
  }
}
